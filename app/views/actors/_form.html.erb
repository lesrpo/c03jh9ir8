<%= form_for @actor do |f| %>
	<div class="form-group">
		<%= f.label :name%>
		<%= f.text_field :name , class:"form-control", placeholder:"Ingresa el nombre"%>
	</div>
	<div class="form-group">
		<%= f.label :bio %>
		<%= f.text_area :bio , class:"form-control", placeholder:"Escribe su biografia"%>
	</div>
	<div class="form-group">
		<%= f.label :birth_date %>
		<%= f.date_field :birth_date, class:"form-control", placeholder:"Fecha de nacimiento"%>
	</div>
	<div class="form-group">
		<%= f.label :birth_place %>
		<%= f.text_field :birth_place ,class:"form-control", placeholder:"Lugar de nacimiento"%>
	</div>
	<div class="form-group">
		<%= f.label :image_url %>
		<%= f.text_field :image_url, class:"form-control" %>
	</div>
	<div class="form-group">
		<%= f.check_box :alive %>
		<%= f.label :alive , "Alive?" %>
	</div>
	<div class="form-group">
		<%= f.label :death_date %>
		<%= f.date_field :death_date,class:"form-control", placeholder:"Fecha de defuncion" %>
	</div>
	<div class="form-group">
		<%= f.label :death_place %>
		<%= f.text_field :death_place, class:"form-control",placeholder:"Lugar de defuncion" %>
	</div>
	<div>
		<%= f.submit class:"btn btn-primary center-block"%>
	</div>
<% end %>
